{
  "name": "node-crud-api",
  "version": "1.0.0",
  "description": "Simple vanilla Node.js CRUD API ",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development nodemon --exec ts-node --experimentalSpecifierResolution node src/main.ts",
    "start:prod": "cross-env NODE_ENV=production tsc && node --experimental-specifier-resolution=node build/main.js",
    "lint": "eslint --ext .ts --fix src/"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.11.17",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "uuid": "^9.0.0"
  }
}
