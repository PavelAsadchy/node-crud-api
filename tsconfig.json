{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "allowJs": false,
    "outDir": "./build",
    "rootDir": "./src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
